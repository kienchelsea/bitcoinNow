<script>

    function checkData() {
        var number = 0;
        var percent = 0;
        var perc = document.getElementById('percent').value;
        var num = document.getElementById('number').value;  
        if (num.trim() == '') {             // check giá trị có chưa? ví dụ nhập nguyên dấu cách là chưa có. .trim() là hàm loại bỏ dấu cách ở 2 đầu của chuỗi.
            number = 0                      // Nếu chưa có giá trị thì set = 0 để tính toán.
        } else {
            number = parseInt(num);         // Có giá trị thì convert về kiểu số nguyên.
        }
        if (perc.trim() == '') {            // Tương tự trên.
            percent = 0;
        } else {
            percent = parseInt(perc.replace("%", ""));      // Xóa kí tự % khi người dùng nhập 15% thì giá trị sẽ là 15.
        }
        if ((number - percent) > 0)             // Check x > y đúng thì set giá trị của trường checkNotify = true. sai thì = false.
        {
            document.getElementById('checkNotify').checked = true;
        } else {
            document.getElementById('checkNotify').checked = false;
        }
    }

</script>
